{
  "tableName": "wechat_messages",
  "columns": {
    "message_id": {
      "type": "integer",
      "primaryKey": true,
      "autoIncrement": true
    },
    "user_id": {
      "type": "integer",
      "nullable": false,
      "foreignKey": {
        "table": "users",
        "column": "user_id"
      }
    },
    "reservation_id": {
      "type": "integer",
      "nullable": false
    },
    "reservation_type": {
      "type": "enum",
      "values": ["individual", "group"],
      "nullable": false
    },
    "message_type": {
      "type": "enum",
      "values": ["submission", "approval", "rejection"],
      "nullable": false
    },
    "template_id": {
      "type": "string",
      "maxLength": 100,
      "nullable": true
    },
    "content": {
      "type": "text",
      "nullable": false
    },
    "sent_at": {
      "type": "timestamp",
      "nullable": true,
      "default": "CURRENT_TIMESTAMP"
    },
    "status": {
      "type": "enum",
      "values": ["sent", "failed"],
      "nullable": true,
      "default": "sent"
    }
  },
  "indexes": [
    {
      "name": "user_id",
      "columns": ["user_id"]
    }
  ]
}