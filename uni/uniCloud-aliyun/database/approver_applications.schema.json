{
  "tableName": "approver_applications",
  "columns": {
    "application_id": {
      "type": "integer",
      "primaryKey": true,
      "autoIncrement": true
    },
    "user_id": {
      "type": "integer",
      "nullable": false,
      "foreignKey": {
        "table": "users",
        "column": "user_id"
      }
    },
    "real_name": {
      "type": "string",
      "maxLength": 50,
      "nullable": false
    },
    "phone": {
      "type": "string",
      "maxLength": 20,
      "nullable": false
    },
    "college": {
      "type": "string",
      "maxLength": 100,
      "nullable": false
    },
    "position": {
      "type": "enum",
      "values": ["teacher", "security"],
      "nullable": false
    },
    "status": {
      "type": "enum",
      "values": ["pending", "approved", "rejected"],
      "nullable": true,
      "default": "pending"
    },
    "reviewed_by": {
      "type": "integer",
      "nullable": true,
      "foreignKey": {
        "table": "users",
        "column": "user_id"
      }
    },
    "reviewed_at": {
      "type": "timestamp",
      "nullable": true
    },
    "created_at": {
      "type": "timestamp",
      "nullable": true,
      "default": "CURRENT_TIMESTAMP"
    }
  },
  "indexes": [
    {
      "name": "user_id",
      "columns": ["user_id"]
    },
    {
      "name": "reviewed_by",
      "columns": ["reviewed_by"]
    }
  ]
}