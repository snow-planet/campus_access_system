{
  "tableName": "notifications",
  "columns": {
    "notification_id": {
      "type": "integer",
      "primaryKey": true,
      "autoIncrement": true
    },
    "title": {
      "type": "string",
      "maxLength": 200,
      "nullable": false
    },
    "content": {
      "type": "text",
      "nullable": false
    },
    "type": {
      "type": "enum",
      "values": ["announcement", "individual_notice", "group_notice"],
      "nullable": false
    },
    "display_location": {
      "type": "enum",
      "values": ["homepage", "individual_form", "group_form"],
      "nullable": false
    },
    "publisher_id": {
      "type": "integer",
      "nullable": false,
      "foreignKey": {
        "table": "users",
        "column": "user_id"
      }
    },
    "is_active": {
      "type": "boolean",
      "nullable": true,
      "default": true
    },
    "created_at": {
      "type": "timestamp",
      "nullable": true,
      "default": "CURRENT_TIMESTAMP"
    },
    "updated_at": {
      "type": "timestamp",
      "nullable": true,
      "default": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP"
    }
  },
  "indexes": [
    {
      "name": "publisher_id",
      "columns": ["publisher_id"]
    },
    {
      "name": "idx_notifications_type",
      "columns": ["type"]
    },
    {
      "name": "idx_notifications_location",
      "columns": ["display_location"]
    }
  ]
}