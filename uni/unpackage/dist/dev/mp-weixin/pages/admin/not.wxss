
.notification-management.data-v-38f6fdde {
  background: linear-gradient(#c7e9f4 0%, #446daa, #1c4e80);
  min-height: 100vh;
}

/* 头部区域 */
.filter-section.data-v-38f6fdde {
  background: white;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.filter-header.data-v-38f6fdde {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}
.filter-header h2.data-v-38f6fdde {
  margin: 0;
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

/* 内容区域 */
.content.data-v-38f6fdde {
  display: flex;
  flex-direction: column;
}
.left-panel.data-v-38f6fdde, .right-panel.data-v-38f6fdde {
  background: #fff;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.panel-header.data-v-38f6fdde {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.panel-header h2.data-v-38f6fdde {
  font-size: 32rpx;
  color: #333;
}

/* 标题样式 */
.page-title.data-v-38f6fdde {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.panel-title.data-v-38f6fdde {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.notice-title.data-v-38f6fdde {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

/* 按钮样式 */
.btn-primary.data-v-38f6fdde {
  background: #1c4e80;
  color: white;
  border: none;
  padding: 2rpx 60rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  cursor: pointer;
}
.btn-secondary.data-v-38f6fdde {
  background: #f5f5f5;
  color: #666;
  border: 1px solid #ddd;
  padding: 5rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  cursor: pointer;
}

/* 公告列表 */
.announcement-list.data-v-38f6fdde {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.announcement-item.data-v-38f6fdde {
  padding: 24rpx;
  border: 1px solid #e8e8e8;
  border-radius: 8rpx;
}
.announcement-item.inactive.data-v-38f6fdde {
  background: #fafafa;
  opacity: 0.7;
}
.announcement-title.data-v-38f6fdde {
  margin: 0 0 16rpx 0;
  font-size: 30rpx;
  color: #333;
}
.announcement-text.data-v-38f6fdde {
  margin: 0 0 24rpx 0;
  color: #666;
  font-size: 26rpx;
}
.announcement-actions.data-v-38f6fdde {
  display: flex;
  gap: 5rpx;
  justify-content: flex-end;
}
.btn-edit.data-v-38f6fdde, .btn-delete.data-v-38f6fdde {
  padding: 2rpx 30rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 30rpx;
  cursor: pointer;
}
.btn-edit.data-v-38f6fdde {
  background: #e6f7ff;
  color: #1890ff;
  border: 1px solid #91d5ff;
}
.btn-delete.data-v-38f6fdde {
  background: #fff2f0;
  color: #ff4d4f;
  border: 1px solid #ffccc7;
}

/* 入校须知标签 */
.notice-tabs.data-v-38f6fdde {
  display: flex;
  gap: 16rpx;
}
.notice-tabs button.data-v-38f6fdde {
  padding: 12rpx 24rpx;
  border: 1px solid #d9d9d9;
  background: #fafafa;
  border-radius: 6rpx;
  font-size: 26rpx;
  cursor: pointer;
}
.notice-tabs button.active.data-v-38f6fdde {
  background: #1c4e80;
  color: white;
  border-color: #1c4e80;
}

/* 编辑器 */
.notice-editor h3.data-v-38f6fdde {
  margin: 0 0 24rpx 0;
  font-size: 30rpx;
  color: #333;
}
.notice-textarea.data-v-38f6fdde {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  border: 1px solid #d9d9d9;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  font-size: 26rpx;
}
.editor-actions.data-v-38f6fdde {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

/* 模态框 */
.modal-overlay.data-v-38f6fdde {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.modal.data-v-38f6fdde {
  background: white;
  border-radius: 12rpx;
  width: 600rpx;
  max-width: 90%;
}
.modal-header.data-v-38f6fdde {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #e8e8e8;
}
.modal-header h2.data-v-38f6fdde {
  margin: 0;
  font-size: 32rpx;
  color: #333;
}
.close-btn.data-v-38f6fdde {
  background: none;
  border: none;
  font-size: 36rpx;
  cursor: pointer;
  color: #999;
}
.modal-body.data-v-38f6fdde {
  padding: 32rpx;
}
.form-group.data-v-38f6fdde {
  margin-bottom: 24rpx;
}
.form-group label.data-v-38f6fdde {
  display: block;
  margin-bottom: 8rpx;
  font-weight: 500;
  font-size: 26rpx;
  color: #333;
}
.form-input.data-v-38f6fdde, .form-textarea.data-v-38f6fdde {
  width: 100%;
  padding: 10rpx 5rpx;
  border: 1px solid #d9d9d9;
  border-radius: 6rpx;
  font-size: 26rpx;
}
.form-textarea.data-v-38f6fdde {
  min-height: 150rpx;
}
.checkbox-label.data-v-38f6fdde {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.modal-footer.data-v-38f6fdde {
  padding: 24rpx 32rpx;
  border-top: 1px solid #e8e8e8;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

/* 响应式设计 */
@media (min-width: 768px) {
.content.data-v-38f6fdde {
    flex-direction: row;
}
}
